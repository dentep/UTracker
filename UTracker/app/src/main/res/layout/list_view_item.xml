<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="2dp" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvAvgspeed"
            android:layout_width="wrap_content"
            android:layout_marginTop="2.5dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvDate"
            android:layout_below="@+id/tvDistance"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tvDistance"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_alignStart="@+id/tvDate"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAvgspeed"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignStart="@+id/tvDate"
            android:textColor="@color/white"
            android:layout_marginTop="2.5dp"
            android:textSize="15sp"
            android:paddingBottom="5dp"/>
        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvDate"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2.5dp"
            android:src="@drawable/bin" />
        <Button
            android:id="@+id/btn_viewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvAvgspeed"
            android:layout_alignBottom="@+id/tvDuration"
            android:layout_alignParentEnd="true"
            android:text="@string/viewMore"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>